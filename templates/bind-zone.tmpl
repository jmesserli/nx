{{ with .SOAInfo -}}
$TTL	{{ .BindDefaultRRTTL }}
@	IN SOA	{{ .NameserverFQDN }} {{ .DottedMailResponsible }} (
	{{ .Serial }}	; serial
	{{ .Refresh }}	; slave refresh interval
	{{ .Retry }}	; slave retry interval
	{{ .Expire }}	; slave copy expire interval
	{{ .TTL }}	; NXDOMAIN cache time
)

; Nameserver
@ NS {{ .NameserverFQDN }}
{{- end }}

; Includes
{{ range $inc := .Includes -}}
    $INCLUDE {{ $inc }}
{{ else -}}
; No includes for zone {{ .ZoneName }}
{{ end }}
; Name	Type	RData
{{ range $rr := .Records -}}
    {{ $rr.Name }}	{{ $rr.Type }}	{{ $rr.RData }}
{{ end }}
;
; End of zone {{ .ZoneName }}
